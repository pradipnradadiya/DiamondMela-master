<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/checkBoxSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <View
            android:id="@+id/view4"
            style="@style/download_view"
            android:layout_width="@dimen/one_sp_view"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="2">

            <com.dealermela.utility.DmlImageView
                android:id="@+id/imgDeleteFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-5dp"
                android:padding="@dimen/five_sp"
                app:srcCompat="@drawable/ic_new_black_24dp" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgDownloadProduct"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                app:placeholderImage="@drawable/dml_logo"
                app:retryImageScaleType="fitCenter"
                app:roundedCornerRadius="@dimen/five_dp" />

            <com.dealermela.utility.DmlTextView
                android:id="@+id/tvSku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgDownloadProduct"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:padding="@dimen/two_dp"
                android:textSize="@dimen/ten_sp" />


            <CheckBox
                android:id="@+id/checkDownloadProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/two_dp"
                android:button="@drawable/check_selecter" />


        </RelativeLayout>

        <View
            android:id="@+id/view2"
            style="@style/download_view"
            android:layout_width="@dimen/one_sp_view"
            android:layout_height="wrap_content" />

        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvProductPrice"
            style="@style/download_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textSize="@dimen/twelve_sp" />

        <View
            android:id="@+id/view3"
            style="@style/download_view"
            android:layout_width="@dimen/one_sp_view"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.dealermela.utility.DmlImageView
                android:id="@+id/imgDelete"
                style="@style/download_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete" />

            <com.dealermela.utility.DmlImageView
                android:id="@+id/imgDownload"
                style="@style/download_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_download" />

        </LinearLayout>

        <View
            android:id="@+id/view5"
            style="@style/download_view"
            android:layout_width="@dimen/one_sp_view"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/view7"
        style="@style/download_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

</android.support.constraint.ConstraintLayout>