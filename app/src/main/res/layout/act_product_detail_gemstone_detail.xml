<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvGemstoneIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/ten_padding_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_padding_margin"
        android:paddingBottom="5sp">

        <com.dealermela.utility.DmlTextView
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type" />

        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvGemstoneType"
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <View
        style="@style/dotted_view_style_detail_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_padding_margin"
        android:paddingBottom="5sp">

        <com.dealermela.utility.DmlTextView
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shape" />

        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvGemstoneShape"
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <View
        style="@style/dotted_view_style_detail_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_padding_margin"
        android:paddingBottom="5sp">

        <com.dealermela.utility.DmlTextView
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting" />

        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvGemstoneSetting"
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <View
        style="@style/dotted_view_style_detail_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_padding_margin"
        android:paddingBottom="5sp">

        <com.dealermela.utility.DmlTextView
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approx. Size(mm)" />

        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvGemstoneSize"
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <View
        style="@style/dotted_view_style_detail_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_padding_margin"
        android:paddingBottom="5sp">

        <com.dealermela.utility.DmlTextView
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pieces" />

        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvGemstonePieces"
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <View
        style="@style/dotted_view_style_detail_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_padding_margin"
        android:paddingBottom="5sp">

        <com.dealermela.utility.DmlTextView
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Value" />

        <com.dealermela.utility.DmlTextView
            android:id="@+id/tvGemstoneEstimatedValue"
            style="@style/product_full_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>


</LinearLayout>