<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="?transaction_line_color" />
                    <corners android:radius="25dp" />
                </shape>
            </item>

            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <solid android:color="?login_signup_text_color" />
                    <stroke android:width="@dimen/one_sp_view" android:color="?toolbarTextColor" />
                    <corners android:radius="25dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="5dp" />

                </shape>
            </item>
        </layer-list>

    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="?transaction_line_color" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <solid android:color="?transaction_round_back" />
                    <stroke android:width="@dimen/one_sp_view" android:color="?toolbarTextColor" />
                    <corners android:radius="25dp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>